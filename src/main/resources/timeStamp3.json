curl -X PUT  http://localhost:9200/twitter_24/ -d '
    {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas" : 1
        },
        "mappings": {
            "tweet": {
                "_source" : {
                    "enabled" : "true"
                },
                "_timestamp" : {
                    "enabled" : true,
                    "store" : true
                },
                "properties": {
                    "message": {
                        "type": "string"
                    },
                    "post_date": {
                        "type": "date",
                        "format": "E, d MMM yyyy HH:mm:ss Z"
                    }
                }
            }
        }
    }
'


curl -X PUT http://localhost:9200/twitter_24/tweet/1 -d '
